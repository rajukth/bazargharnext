<style>
    .container {
        margin-top: 1px;
        margin-bottom: 1px
    }

    .carousel-inner img {
        width: 100%;
        height: 100%
    }

    #custCarousel .carousel-indicators {
        position: static;
        margin-top: 20px
    }

        #custCarousel .carousel-indicators > li {
            width: 100px
        }

        #custCarousel .carousel-indicators li img {
            display: block;
            opacity: 0.7
        }

        #custCarousel .carousel-indicators li.active img {
            opacity: 1
        }

        #custCarousel .carousel-indicators li:hover img {
            opacity: 0.85
        }

    .carousel-item img {
        width: 100%
    }
    .title {
        height: 100px;
        
        margin-bottom: 10px;
        padding: 0;
    }

    @*//rating*@
    
    .rate {
        float: left;
        height: 30px;
        padding: 0 10px;
      
    }

        .rate:not(:checked) > input {
            position: absolute;
            top: -9999px;
        }

        .rate:not(:checked) > label {
            float: right;
            width: 1em;
            overflow: hidden;
            white-space: nowrap;
            cursor: pointer;
            font-size: 30px;
            color: #ccc;
            margin-top:-10px;
        }

            .rate:not(:checked) > label:before {
                content: '★ ';
            }

        .rate > input:checked ~ label {
            color: #ffc700;
        }

        .rate:not(:checked) > label:hover,
        .rate:not(:checked) > label:hover ~ label {
            color: #deb217;
        }

        .rate > input:checked + label:hover,
        .rate > input:checked + label:hover ~ label,
        .rate > input:checked ~ label:hover,
        .rate > input:checked ~ label:hover ~ label,
        .rate > label:hover ~ input:checked ~ label {
            color: #c59b08;
        }

    .description{
        height:500px;
        overflow:auto;
    }
    table {
    margin-left:20px;
    }
        th, td {
    padding:10px;
    }
@*rating*@

</style>
