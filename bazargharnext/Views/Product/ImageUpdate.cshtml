@model bazargharnext.ModelsView.MyProductView
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    <div class="text-center">
        <form method="post" enctype="multipart/form-data" asp-controller="Product" asp-action="ImageUpdate">
            <div class="form-group">
                <label for="file-ip-1" class="image">
                    <img src="~/images/add-image.png" title="Upload Image" id="file-ip-1-preview" style="width:400px;height:300px;" alt="avatar" class="border img-responsive">
                </label>
                <input asp-for="GalleryFiles" id="file-ip-1" accept="image/*" class="fa fa-camera" style="display:none" onchange="showPreviewOne(event);">
                <br />
                <span asp-validation-for="GalleryFiles" class="text-danger"></span>
            </div>

            <input type="submit" class="btn btn-primary" />
        </form>

    </div>

}



<script>
    function goBack() {
        window.history.back();
    }
    function showPreviewOne(event) {
        if (event.target.files.length > 0) {
            let src = URL.createObjectURL(event.target.files[0]);
            let preview = document.getElementById("file-ip-1-preview");
            preview.src = src;
            preview.style.display = "block";



        }

    }


</script>
