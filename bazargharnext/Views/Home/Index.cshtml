        margin: 0px;
    }

    .low {
        margin: 0px;
        padding-left: 3px;
        padding-right: 3px;
    }

    .high {
        margin: 0px;
        padding-left: 3px;
    }

    input:invalid {
        border: 3px solid #ff0000;
    }

    .mySlides {
        display: none;
    }

    .product-grid {
        margin-bottom: 8px;
        background: #c2acde;
        border: 4px solid white;
