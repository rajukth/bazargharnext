@model bazargharnext.Models.Category
@{ 
    Layout = "_Business";
}
<style>
    .tbl1 {
        margin: 20px auto;
        width: 500px;
        height: 370px;
        align-items: center;
        border: 2px solid green;
    }

    .child {
        width: 300px;
        height: 300px;
        margin: 10px auto;
    }

    th, td {
        padding: 5px;
    }


</style>
<div class="tbl1">
    <div class="child">
        <form method="post" asp-controller="Category" asp-action="update">
            <center>  <h3>Update Category</h3></center><br />
        @{var category = ViewBag.Category; }
            <table>
                <tr>
                    <th> Category Id </th>
                    <th> <input type="text" value="@category.Category_id" asp-for="Category_id" readonly="readonly"/></th>

                </tr>
                <tr>
                    <th> Category </th>
                    <th> <input type="text" value="@category.Category_name" asp-for="Category_name" /></th>

                </tr>
                <tr>
                    <th> Description </th>
                    <th> <textarea asp-for="Category_description" rows="5" cols="23" style="resize:none">@category.Category_description"</textarea></th>

                </tr>
                <tr>

                    <td colspan="2" class="text-center"><input type="Submit" class="btn btn-success" value="Update" /></td>
                </tr>
            </table>
        </form>
    </div>
    </div>